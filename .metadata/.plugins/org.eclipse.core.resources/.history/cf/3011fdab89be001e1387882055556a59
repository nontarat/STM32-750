/* USER CODE BEGIN 0 */
struct netconn *conn;

void connect_to_server(const char *server_ip, int server_port) {
  ip_addr_t server_addr;

  // แปลง server_ip จาก string เป็น ip_addr_t
  if (ipaddr_aton(server_ip, &server_addr) == 1) {
    // สร้าง netconn
    conn = netconn_new(NETCONN_TCP);

    // เชื่อมต่อไปยัง server
    if (netconn_connect(conn, &server_addr, server_port) == ERR_OK) {
      printf("Connected to server\r\n");
    } else {
      printf("Failed to connect to server\r\n");
    }
  } else {
    printf("Invalid server IP address\r\n");
  }
}
void close_connection() {
  // ปิด netconn
  netconn_close(conn);
  netconn_delete(conn);
  printf("Connection closed\r\n");
}
/* USER CODE END 0 */


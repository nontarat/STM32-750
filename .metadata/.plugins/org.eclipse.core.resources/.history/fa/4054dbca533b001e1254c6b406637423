/* USER CODE END Header_StartadcTask */
void StartadcTask(void *argument)
{
  /* USER CODE BEGIN StartadcTask */
  /* Infinite loop */
  for(;;)
  {

    osDelay(1);
  }
  /* USER CODE END StartadcTask */
}


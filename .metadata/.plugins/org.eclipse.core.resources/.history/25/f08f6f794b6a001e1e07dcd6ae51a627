#ifndef SRC_COMMON_TIME_UTILS_H_
#define SRC_COMMON_TIME_UTILS_H_


#include "foc_utils.h"

/**
 * Function implementing delay() function in milliseconds
 * - blocking function
 * - hardware specific

 * @param ms number of milliseconds to wait
 */
void _delay(unsigned long ms);

/**
 * Function implementing timestamp getting function in microseconds
 * hardware specific
 */
unsigned long _micros();

#endif /* SRC_COMMON_TIME_UTILS_H_ */
